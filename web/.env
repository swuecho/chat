
# Backend Configuration
# Set these to override default backend URLs

# Base URL for regular API calls (optional)
# Default: '/api' (uses proxy in development, direct in production)
VITE_BACKEND_URL=/api

# URL for streaming endpoints (optional)
# Default: 'http://localhost:8080/api' in development, '/api' in production
# Use direct backend URL in development to bypass proxy buffering for SSE
VITE_STREAMING_URL=http://localhost:8080/api

# Custom backend port (if different from 8080)
# VITE_STREAMING_URL=http://localhost:3001/api